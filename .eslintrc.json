{
  "parser": "babel-eslint",
  "extends": [
    "prettier",
    "standard",
    "standard-react"
  ],
  "rules": {
    "jsx-quotes": [
      1,
      "prefer-double"
    ],
    "semi": [
      2,
      "always"
    ],
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "always-multiline"
      }
    ],
    "react/jsx-tag-spacing": [
      2,
      {
        "closingSlash": "never",
        "beforeSelfClosing": "never",
        "afterOpening": "never",
        "beforeClosing": "allow"
      }
    ],
    "no-console": ["error"]
  },
  "plugins": [
    "prettier"
  ]
}
